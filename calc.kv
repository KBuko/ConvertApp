<InputInfo@MDTextField>:
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: self.minimum_height
    input_type: 'number'
    input_filter: 'float'
    mode: "fill"

<Container>:
    orientation: 'vertical'

    pln: pln
    byn: byn
    uah: uah
    usd: usd

    MDTopAppBar:
        title: "YourConverter"
        padding: ['3dp', 0, 0, '13dp']
        left_action_items:
            [["charity", lambda x: app.about_n_charity(), "about"]]
        right_action_items:
            [
            ["delete-outline", lambda x: app.clear_content(pln, byn, usd, uah), "clear fields"],
            ["theme-light-dark", lambda x: app.dark_light(), 'switch theme'],
            ]

    BoxLayout:
        orientation: 'vertical'
        padding: ['35dp', '25dp', '47dp', '30dp']


        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'


            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/pln.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: pln
                    hint_text: 'Pln'

            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/byn.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: byn
                    hint_text: 'Byn'

            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/uah.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: uah
                    hint_text: 'Uah'

            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/usd.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: usd
                    hint_text: 'Usd'

        BoxLayout:

            MDRaisedButton:
                text: 'Calculate'
                font_size: "40sp"
                size_hint: 1, 0.8


                on_release:
                    root.Calculate()



