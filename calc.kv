<InputInfo@MDTextField>:
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: self.minimum_height
    input_type: 'number'
    input_filter: 'float'
    mode: "fill"

<Container>:
    orientation: 'vertical'

    pln: pln
    byn: byn
    uah: uah
    usd: usd
    eur: eur
    cad: cad

    MDTopAppBar:
        title: "YourConverter"
        left_action_items:
            [["menu", lambda x: app.callback(x)]]
        right_action_items:
            [
            ["delete-outline", lambda x: app.clear_content(pln, byn, usd, uah, eur, cad), "clear fields"]
            ]

    BoxLayout:
        orientation: 'vertical'
        padding: ['35dp', '25dp', '47dp', '30dp']


        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'


            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/pln.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: pln
                    hint_text: 'Pln'
                    on_text: root.calculate(self.text, self.hint_text)


            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/byn.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: byn
                    hint_text: 'Byn'
                    on_text: root.calculate(self.text, self.hint_text)

            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/uah.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: uah
                    hint_text: 'Uah'
                    on_text: root.calculate(self.text, self.hint_text)

            GridLayout:
                cols: 2


                MDIconButton:
                    icon: 'images/usd.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: usd
                    hint_text: 'Usd'
                    on_text: root.calculate(self.text, self.hint_text)


            GridLayout:
                cols: 2

                MDIconButton:
                    icon: 'images/eur.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: eur
                    hint_text: 'Eur'
                    on_text: root.calculate(self.text, self.hint_text)


            GridLayout:
                cols: 2

                MDIconButton:
                    icon: 'images/cad.png'
                    icon_size: "30sp"
                    adaptive_size: True
                    padding: '8dp'
                InputInfo:
                    id: cad
                    hint_text: 'Cad'
                    on_text: root.calculate(self.text, self.hint_text)

        BoxLayout:
            Image:
                source: 'images/obl.png'
                opacity: 0.45